async function getUserProfile(userId: string) {
  if (!userId) return null;
  
  try {
    const { data, error } = await supabaseClient
      .from('user_profiles')
      .select('*')
      .eq('id', userId);

    if (error) throw error;
    return data?.[0] || null;
  } catch (e) {
    console.error('Error fetching user profile:', e);
    return null;
  }
}

